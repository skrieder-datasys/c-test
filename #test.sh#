#! /bin/bash                                                                                                                                                                                               
j=100
for i in {1..1}
do
    echo "I is equal to: " $i    
    echo "J is equal to: " $j    
    j=$(expr $j + $j)
#! /bin/bash                                                                                                                                                                                               
j=100
for i in {1..1}
do
    echo "I is equal to: " $i
    echo "J is equal to: " $j
    j=$(expr $j + $j)
    echo "J is equal to: " $j
done
    echo "J is equal to: " $j
done